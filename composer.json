{
    "autoload": {
        "psr-4": { "": "src/", "Tests\\": "tests/" }
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
        "test": "phpunit -c tests",
        "phpcbf": "phpcbf --standard=PSR2 src/",
        "phpstan": "phpstan analyse src tests --level=1"
    },
    "require": {
        "phpstan/phpstan": "^0.12.4"
    }
}
